###########################################################################################
# EE241B Lab Liberate Makefile
###########################################################################################

###########################################################################################
# General Variables
###########################################################################################
CELL_TYPE ?= inverter
CHAR_TCL ?= $(CELL_TYPE).tcl

#########################################################################################
# Generate Characterization TCL
#########################################################################################

#########################################################################################
# Characterize with Liberate
#########################################################################################
.PHONY: gen-libs

gen-libs:
	liberate --trio $(CHAR_TCL) |& tee $(CELL_TYPE).log

#########################################################################################
# general cleanup rule
#########################################################################################
.PHONY: clean
clean:
	rm -rf *.log *.ldb.gz *.lib



